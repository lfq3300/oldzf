/* pages/carlist/carlist.wxss */
.content{
  width: 100%;
}
.item{
  margin-top: 50rpx;
  height: 210rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 10rpx #999;
}
.item .item-content{
  width: 100%;
}
.item .item-content .item-left{ 
  color: #333333;
  font-size: 28rpx;
  font-family: "MYingHeiPRC-W4";
  height: 160rpx;
}
.item .item-content .item-left text{
  display: block;
  padding-left:41rpx;
}
.text_one{
  padding-top: 41rpx;
}

.item .item-content .item-img{
  width: 313rpx;
  height: 100rpx;
  margin-right: 21rpx;
}
.item-img image{
  width: 100%;
}
.item:last-child{
  margin-bottom: 150rpx;
}
.bottom{
  background: #272A31;
  color: #999999;
  font-size: 20rpx;
  font-family: "MYingHeiPRC-W3";
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}